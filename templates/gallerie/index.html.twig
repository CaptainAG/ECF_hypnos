{% extends 'base.html.twig' %}

{% block title %}Gallerie index{% endblock %}

{% block body %}
{%  include 'nav.html.twig' %}
 <div class="col-suite">
    <div class="container-xxl">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center  my-5">
                {# <a class="btn btn-primary " href="{{ path('app_gerant_gallerie_new') }}">Ajouter</a>  #}
            </div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for gallerie in galleries %}
                    <tr>
                        <td><img src="{{asset('/images/suite/' ~ gallerie.imageName )}}" alt="" class="galerie_img_index"></td>
                        <td>
                            {{ include('gallerie/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {%  include 'footer.html.twig' %}
{% endblock %}
