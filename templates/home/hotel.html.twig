{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {%  include 'nav.html.twig' %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
    
    <div class="background">
        <div class="container-xxl">
            <div class="row">
            {% for hotel in hotels %}
                   <div class="col-md-6 col-lg-4 col-xl-3 py-5"> 
                        <div class="card  rounded-3" style="width: 18rem;">
                            <img src="" class="card-img-top " alt="...">
                            <div class="card-body">
                                <h5 class="card-title text-center">{{hotel.name}}</h5>
                                <div class="card-text overflow-hidden my-3 text-card">{{hotel.city}}</div> 
                                <a href="{{path('hotel_show',{'id': hotel.id})}}"  class="btn btn-primary btn-card">Voir l'hotel</a>
                            </div>
                        </div>
                    </div>
            {% endfor %}
         </div>
        </div>

    </div>
    
    
    {%  include 'footer.html.twig' %}
{% endblock %}